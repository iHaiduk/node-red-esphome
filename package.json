{
  "version": "0.0.1",
  "name": "@esphome/node-red-esphome",
  "description": "Plugin for Node-RED to control ESPHome devices.",
  "module": "index.ts",
  "author": "Ihor Haiduk",
  "license": "Apache-2.0",
  "scripts": {
    "start": "node-red",
    "dev": "concurrently \"bun run build:dev\" \"bun run nodemon\"",
    "nodemon": "sleep 3 && nodemon",
    "build:dev": "NODE_ENV=development bun run --watch builder/builder.ts",
    "build": "NODE_ENV=production bun run builder/builder.ts",
    "format:write": "prettier --write ./src",
    "format:check": "prettier --check ./src",
    "lint": "eslint ./",
    "lint:fix": "eslint ./ --fix",
    "lint:inspect": "eslint --inspect-config",
    "test": "exit 0;",
    "---": "exit 0;",
    "node:install": "bun run builder/install.ts",
    "prepare": "husky",
    "release": "release-it"
  },
  "keywords": [ "node-red", "esphome", "node-red-esphome" ],
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@eslint/js": "9.18.0",
    "@release-it/conventional-changelog": "10.0.0",
    "@stylistic/eslint-plugin": "2.13.0",
    "@types/bun": "1.1.17",
    "@types/node-red": "1.3.5",
    "@types/react": "19.0.7",
    "@types/react-dom": "19.0.3",
    "@typescript-eslint/eslint-plugin": "8.20.0",
    "@typescript-eslint/parser": "8.20.0",
    "concurrently": "9.1.2",
    "eslint": "9.18.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-import-helpers": "2.0.1",
    "eslint-plugin-prettier": "5.2.3",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-unicorn": "56.0.1",
    "globals": "15.14.0",
    "husky": "9.1.7",
    "node-red": "4.0.8",
    "nodemon": "3.1.9",
    "prettier": "3.4.2",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "release-it": "18.1.1",
    "style-object-to-css-string": "1.1.3",
    "typescript-eslint": "8.20.0",
    "victorica": "0.0.2"
  },
  "peerDependencies": {
    "typescript": "5.7.2"
  },
  "dependencies": {
    "remeda": "2.19.2"
  },
  "node-red": {
    "nodes": {
      "esphome-mqtt": "./dist/esphome-mqtt/esphome-mqtt.js",
      "esphome-custom": "./dist/esphome-custom/esphome-custom.js",
      "esphome-variable": "./dist/esphome-variable/esphome-variable.js"
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {}
          ]
        }
      }
    }
  }
}
