{
  "version": "0.0.1",
  "name": "node-red-esphome",
  "module": "index.ts",
  "type": "module",
  "author": "Ihor Haiduk",
  "license": "Apache-2.0",
  "scripts": {
    "start": "node-red",
    "dev": "concurrently \"bun run build:dev\" \"nodemon\"",
    "nodemon": "nodemon",
    "build:dev": "NODE_ENV=development bun run --watch builder/builder.ts",
    "build": "NODE_ENV=production bun run builder/builder.ts",
    "format:write": "prettier --write ./src",
    "format:check": "prettier --check ./src",
    "lint": "eslint src/**/*.ts src/**/*.tsx",
    "lint:fix": "eslint ./ --fix",
    "lint:inspect": "eslint --inspect-config",
    "---": "exit 0;",
    "node:install": "bun run builder/install.ts"
  },
  "devDependencies": {
    "@eslint/js": "9.17.0",
    "@stylistic/eslint-plugin": "2.12.1",
    "@types/bun": "1.1.16",
    "@types/node-red": "1.3.5",
    "@types/react": "19.0.4",
    "@types/react-dom": "19.0.2",
    "@typescript-eslint/eslint-plugin": "8.19.1",
    "@typescript-eslint/parser": "8.19.1",
    "concurrently": "9.1.2",
    "eslint": "9.17.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-import-helpers": "2.0.1",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "7.37.3",
    "eslint-plugin-unicorn": "56.0.1",
    "globals": "15.14.0",
    "node-red": "4.0.8",
    "nodemon": "3.1.9",
    "prettier": "3.4.2",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "style-object-to-css-string": "1.1.3",
    "typescript-eslint": "8.19.1",
    "victorica": "0.0.2"
  },
  "peerDependencies": {
    "typescript": "5.7.2"
  },
  "dependencies": {
    "remeda": "2.19.0",
    "rxjs": "7.8.1",
    "yaml": "2.7.0"
  },
  "node-red": {
    "esphome-custom": "./dist/nodes/esphome-custom/esphome-custom.js"
  }
}
